APP_NAME=ExploreBenin360 Backend
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=explorebenin360
DB_USERNAME=root
DB_PASSWORD=

# CORS
FRONTEND_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Payments / Commission
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_BASE_URL=https://api.paystack.co
COMMISSION_PERCENT=12

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS=no-reply@explorebenin360.local
MAIL_FROM_NAME="ExploreBenin360"

# Filesystem
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Do NOT commit real secrets. Use .env (gitignored) for actual values.
# The values below are placeholders for staging setup.
# Media / Cloudinary (staging)
MEDIA_PROVIDER=cloudinary
# Option A: single URL (preferred)
CLOUDINARY_URL=cloudinary://<API_KEY>:<API_SECRET>@<CLOUD_NAME>
# Option B: explicit (used if CLOUDINARY_URL not set)
CLOUDINARY_CLOUD_NAME=<CLOUD_NAME>
CLOUDINARY_API_KEY=<API_KEY>
CLOUDINARY_API_SECRET=<API_SECRET>
# Optional: explicit delivery base (rarely needed)
CLOUDINARY_BASE_URL=
# Base folder for uploads (staging)
CLOUDINARY_FOLDER_BASE=explorebenin360/staging
# Delivery/CDN (optional for S3 flows; for Cloudinary leave blank)
CDN_BASE_URL=
# Upload constraints
MEDIA_MAX_SIZE_MB=15
MEDIA_ALLOWED_TYPES=jpg,jpeg,png,webp,avif,mp4
