APP_NAME="ExploreBenin360 Backend"
APP_ENV=production
APP_KEY=  # OBLIGATOIRE: Générer avec php artisan key:generate
APP_DEBUG=false  # JAMAIS true en production
APP_URL=https://api.explorebenin360.com

# Database (OBLIGATOIRE)
DB_CONNECTION=mysql
DB_HOST=  # OBLIGATOIRE
DB_PORT=3306
DB_DATABASE=  # OBLIGATOIRE
DB_USERNAME=  # OBLIGATOIRE
DB_PASSWORD=  # OBLIGATOIRE

# CORS (OBLIGATOIRE)
FRONTEND_ORIGIN=https://explorebenin360.com  # Pas de wildcard *
FRONTEND_URL=https://explorebenin360.com

# Payments (OBLIGATOIRE en production)
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_CALLBACK_URL=https://explorebenin360.com/checkout/callback
COMMISSION_PERCENT=12

# Media (OBLIGATOIRE si MEDIA_PROVIDER=cloudinary)
MEDIA_PROVIDER=cloudinary
CLOUDINARY_URL=cloudinary://<API_KEY>:<API_SECRET>@<CLOUD_NAME>
# OU séparé:
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER_BASE=explorebenin360/production
MEDIA_MAX_SIZE_MB=5  # Réduire de 15 à 5

# Mail
MAIL_MAILER=smtp
MAIL_FROM_ADDRESS=no-reply@explorebenin360.com
MAIL_FROM_NAME="ExploreBenin360"

# Mail SMTP Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# Providers SMTP recommandés pour le Bénin:
# - Gmail SMTP: smtp.gmail.com:587 (nécessite App Password)
# - SendGrid: smtp.sendgrid.net:587
# - Mailgun: smtp.mailgun.org:587
# - Mailtrap (test): smtp.mailtrap.io:2525

# Session Security
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
